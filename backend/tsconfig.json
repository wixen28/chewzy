{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    // "target": "ES2017",
    "target": "ESNext",
    "esModuleInterop": true,
    "lib": ["es2018"],
    "types": ["node", "jest"],

  },
  "include": ["src/**/*.ts"],  // Include all files in the "src" folder
  "exclude": ["node_modules"]
}



